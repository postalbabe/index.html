  <audio id="unwrapSound" src="https://cdn.pixabay.com/download/audio/2021/11/16/audio_4f7ad44a33.mp3?filename=paper-rip-1-88774.mp3"></audio>

  <div class="box-container">
    <h2>üéÅ Christmas Gift Box</h2>
    <div class="box" id="giftBox" onclick="openBox()"></div>
    <div id="itemDisplay" class="item-display">Click the box!</div>
    <button onclick="openBox()">Open with Channel Points</button>
  </div>

  <script>
    // Snow effect
    function createSnow() {
      for (let i = 0; i < 40; i++) {
        const snow = document.createElement('div');
        snow.className = 'snowflake';
        snow.innerHTML = '‚ùÑ';
        snow.style.left = Math.random() * 100 + 'vw';
        snow.style.fontSize = Math.random() * 1.5 + 0.5 + 'em';
        snow.style.animationDuration = Math.random() * 5 + 5 + 's';
        snow.style.opacity = Math.random();
        document.body.appendChild(snow);
      }
    }
    createSnow();

    // Products
    const products = [
      "Holiday Mug",
      "Cozy Blanket",
      "Reindeer Plushie",
      "Candy Cane Pack",
      "Snowflake LED Light",
      "Mystery Gift",
      "Gingerbread Cookie Set"
    ];

    function openBox() {
      const box = document.getElementById('giftBox');
      const sound = document.getElementById('unwrapSound');

      // Play sound
      sound.currentTime = 0;
      sound.play();

      // Glow effect
      box.classList.add('glow');
      setTimeout(() => box.classList.remove('glow'), 1200);

      // Show random item
      const randomItem = products[Math.floor(Math.random() * products.length)];
      document.getElementById('itemDisplay').innerText = `You got: ${randomItem}!`;
    }
  </script>
</body>
